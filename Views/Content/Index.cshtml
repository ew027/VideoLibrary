@model IEnumerable<VideoLibrary.Models.Content>

@{
    ViewData["Title"] = "Content Management";
}

<h1>Content Management</h1>

@* Display success/error messages *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div><a asp-action="Create" class="btn btn-primary">Add New Content</a></div>
    <form class="d-flex me-3" asp-controller="Content" asp-action="Search" method="get">
        <div class="input-group">
            <input class="form-control" type="search" name="q" placeholder="Search content..."
                   value="@ViewData["SearchQuery"]" aria-label="Search">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Tags</th>
                    <th>Date Last Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="View" asp-route-id="@item.Id" class="text-decoration-none">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </td>
                        <td>
                            @foreach (var tag in item.ContentTags)
                            {
                                <a href="@Url.Action("ByTag", "Video", new { tagId = tag.Tag.Id })"
                                   class="badge bg-primary tag-badge">@tag.Tag.Name</a>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateLastUpdated)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this content?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No content found</h4>
        <p>There are no content items to display. <a asp-action="Create">Create your first piece of content</a>.</p>
    </div>
}