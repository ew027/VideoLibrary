@model VideoLibrary.Models.TagWithContentViewModel

@{
    ViewData["Title"] = $"Videos tagged: {Model.Tag.Name}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Tags</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Tag.Name</li>
    </ol>
</nav>

<h1>@Model.Tag.Name videos</h1>

<div class="btn-group">
    <a href="@Url.Action("Tag", "Playlist", new { tagId = Model.Tag.Id })" class="btn btn-success">
        <i class="bi bi-play-circle"></i> Play All (@Model.TotalVideos videos)
    </a>
    <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
        <span class="visually-hidden">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" href="@Url.Action("Tag", "Playlist", new { tagId = Model.Tag.Id })">
                <i class="bi bi-play-circle"></i> Play in Order
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="@Url.Action("Tag", "Playlist", new { tagId = Model.Tag.Id })?shuffle=true">
                <i class="bi bi-shuffle"></i> Play Shuffled
            </a>
        </li>
    </ul>
</div>

@if (Model.Videos.Any())
{
        <div class="row">
        @foreach (var video in Model.Videos)
        {
                    <div class="col-md-4 mb-4">
                        <div class="card video-card">
                            <a href="@Url.Action("Details", "Video", new { id = video.Id, tagId = Model.Tag.Id })" class="video-link">
                        @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                        {
                                <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                                        class="card-img-top video-thumbnail" alt="@video.Title">
                        }
                        else
                        {
                                <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="text-muted">Generating Thumbnail...</span>
                                </div>
                        }
                        </a>                    
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@video.Title</h5>
                                <a href="@Url.Action("Edit", "Video", new { id = video.Id })" class="btn btn-outline-secondary btn-sm">Edit</a>
                            </div>
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="video-info">@video.ResolutionFormatted</span>
                                <span class="video-info">@video.DurationFormatted</span>
                            </div>
                        </div>
                        </div>
                    </div>
        }
        </div>
}

@if (Model.Galleries.Any())
{
        <h3>Galleries</h3>
        <div class="row">
        @foreach (var gallery in Model.Galleries)
        {
                    <div class="col-md-4 mb-4">
                        <div class="card video-card">
                                    <a href="@Url.Action("Details", "Gallery", new { id = gallery.Id })" class="video-link">
                    @if (gallery.ThumbnailPath != null)
                    {
                                    <img src="@Url.Action("Thumbnail", "Gallery", new { galleryId = gallery.Id, fileName = gallery.ThumbnailPath })" 
                                         class="card-img-top video-thumbnail" alt="@gallery.Name">
                    }
                    else
                    {
                                    <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-images" style="font-size: 3rem; color: #6c757d;"></i>
                                    </div>
                    }
                    </a>
                            <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@gallery.Name</h5>
                                        <a href="@Url.Action("Edit", "Gallery", new { id = gallery.Id })" class="btn btn-outline-secondary btn-sm">Edit</a>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                    <small class="text-muted">@gallery.ImageCount image@(gallery.ImageCount == 1 ? "" : "s")</small>
                                </div>
                            </div>
                        </div>
                    </div>
        }
        </div>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Tags</a>