@if (Model.Playlists.Any())
{
    <h3>Playlists</h3>
    <div class="row">
        @foreach (var playlist in Model.Playlists)
        {
            <div class="col-md-4 mb-4">
                <div class="card video-card">
                    <a href="@Url.Action("Play", "Playlist", new { id = playlist.Id })" class="video-link">
                        @if (playlist.VideoCount() > 0)
                        {
                            <img src="@Url.Action("SmallThumbnail", "Video", new { id = playlist.FirstVideoId() })"
                                 class="card-img-top video-thumbnail" alt="Playlist thumbnail">
                        }
                        else
                        {
                            <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Generating Thumbnail...</span>
                            </div>
                        }
                    </a>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="video-info"><b>@playlist.Name</b></span>
                            <span class="video-info">@playlist.VideoCount() videos</span>
                        </div>
                        <div class="d-flex flex-wrap mb-2">
                            @foreach (var videoTag in playlist.PlaylistTags)
                            {
                                <a href="@Url.Action("ByTag", "Video", new { tagId = videoTag.Tag.Id })"
                                   class="badge bg-primary tag-badge">@videoTag.Tag.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model.Galleries.Any())
{
        <h3>Galleries</h3>
        <div class="row">
        @foreach (var gallery in Model.Galleries)
        {
                    <div class="col-md-4 mb-4">
                        <div class="card video-card">
                                    <a href="@Url.Action("Details", "Gallery", new { id = gallery.Id })" class="video-link">
                    @if (gallery.ThumbnailPath != null)
                    {
                                    <img src="@Url.Action("Thumbnail", "Gallery", new { galleryId = gallery.Id, fileName = gallery.ThumbnailPath })" 
                                         class="card-img-top video-thumbnail" alt="@gallery.Name">
                    }
                    else
                    {
                                    <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-images" style="font-size: 3rem; color: #6c757d;"></i>
                                    </div>
                    }
                    </a>
                            <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@gallery.Name</h5>
                                        <a href="@Url.Action("Edit", "Gallery", new { id = gallery.Id })" class="btn btn-outline-secondary btn-sm">Edit</a>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                    <small class="text-muted">@gallery.ImageCount image@(gallery.ImageCount == 1 ? "" : "s")</small>
                                </div>
                            </div>
                        </div>
                    </div>
        }
        </div>
}

@if (Model.Contents.Any())
{
    <h3>Content items</h3>
    <div class="row">
        @foreach (var content in Model.Contents)
        {
            <div class="col-md-4 mb-4">
                <div class="card video-card">
                            <a href="@Url.Action("View", "Content", new { id = content.Id, tagId = Model.Tag.Id })" class="video-link">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@content.Title</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Tags</a>

<div class="modal fade" id="playlistModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Custom Playlist</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Select videos to include in playlist:</span>
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-secondary" onclick="selectAllVideos()">Select All</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="selectNoneVideos()">Select None</button>
                        </div>
                    </div>
                </div>

                <div class="video-selection-list" style="max-height: 400px; overflow-y: auto;">
                    @foreach (var video in Model.ClipVideos)
                    {
                        <div class="form-check d-flex align-items-center mb-2">
                            <input class="form-check-input me-2" type="checkbox" value="@video.Id"
                                   id="video_@video.Id" data-video-id="@video.Id" checked>

                            @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                            {
                                <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                                     class="rounded me-2" style="width: 60px; height: 40px; object-fit: cover;" alt="Thumbnail">
                            }
                            else
                            {
                                <div class="bg-light border rounded me-2 d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 40px;">
                                    <i class="bi bi-film text-muted"></i>
                                </div>
                            }

                            <div class="flex-grow-1">
                                <label class="form-check-label" for="video_@video.Id">
                                    <strong>@video.Title</strong><br>
                                    <small class="text-muted">@video.DurationFormatted</small>
                                </label>
                            </div>
                        </div>
                    }
                    @foreach (var video in Model.Videos)
                    {
                        <div class="form-check d-flex align-items-center mb-2">
                            <input class="form-check-input me-2" type="checkbox" value="@video.Id"
                                   id="video_@video.Id" data-video-id="@video.Id" checked>

                            @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                            {
                                <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                                     class="rounded me-2" style="width: 60px; height: 40px; object-fit: cover;" alt="Thumbnail">
                            }
                            else
                            {
                                <div class="bg-light border rounded me-2 d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 40px;">
                                    <i class="bi bi-film text-muted"></i>
                                </div>
                            }

                            <div class="flex-grow-1">
                                <label class="form-check-label" for="video_@video.Id">
                                    <strong>@video.Title</strong><br>
                                    <small class="text-muted">@video.DurationFormatted</small>
                                </label>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <small class="text-muted">
                        <span id="selectedCount">@Model.Videos.Count</span> of @Model.Videos.Count videos selected
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group me-auto">
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="playlistOrder" value="order" checked> In Order
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="playlistOrder" value="shuffle"> Shuffled
                    </label>
                </div>

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createCustomPlaylist()" id="createPlaylistBtn">
                    <i class="bi bi-play-circle"></i> Create Playlist
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function showPlaylistModal() {
        const modal = new bootstrap.Modal(document.getElementById('playlistModal'));
        updateSelectedCount();
        modal.show();
    }

    function selectAllVideos() {
        const checkboxes = document.querySelectorAll('#playlistModal input[type="checkbox"]');
        checkboxes.forEach(cb => cb.checked = true);
        updateSelectedCount();
    }

    function selectNoneVideos() {
        const checkboxes = document.querySelectorAll('#playlistModal input[type="checkbox"]');
        checkboxes.forEach(cb => cb.checked = false);
        updateSelectedCount();
    }

    function updateSelectedCount() {
        const checkboxes = document.querySelectorAll('#playlistModal input[type="checkbox"]');
        const selectedCount = Array.from(checkboxes).filter(cb => cb.checked).length;
        document.getElementById('selectedCount').textContent = selectedCount;

        const createBtn = document.getElementById('createPlaylistBtn');
        createBtn.disabled = selectedCount === 0;
    }


    function createCustomPlaylist() {
        const selectedVideoIds = [];
        const checkboxes = document.querySelectorAll('#playlistModal input[type="checkbox"]:checked');

        checkboxes.forEach(cb => {
            selectedVideoIds.push(cb.getAttribute('data-video-id'));
        });

        if (selectedVideoIds.length === 0) {
            alert('Please select at least one video');
            return;
        }

        const playlistOrder = document.querySelector('input[name="playlistOrder"]:checked').value;
        const tagId = @Model.Tag.Id;

        // Create the playlist URL with selected video IDs - now goes to Create page
        const videoIdsParam = selectedVideoIds.join(',');
        const createUrl = `/Playlist/Create?tagId=${tagId}&videoIds=${videoIdsParam}&order=${playlistOrder}`;

        // Navigate to the create playlist page
        window.location.href = createUrl;
    }

    // Update existing playlist links to include save option
    function updatePlaylistLinks() {
        // For tag-based playlists, modify existing links
        const playAllLinks = document.querySelectorAll('a[href*="/Playlist/Tag"]');
        playAllLinks.forEach(link => {
            const originalHref = link.href;
            link.addEventListener('click', function(e) {
                if (e.ctrlKey || e.metaKey) {
                    // Ctrl+Click goes to save playlist
                    e.preventDefault();
                    const url = new URL(originalHref);
                    const tagId = url.searchParams.get('tagId') || url.pathname.split('/').pop();
                    window.location.href = `/Playlist/Create?tagId=${tagId}&order=order`;
                }
                // Normal click plays immediately
            });
        });
    }

    // Add event listeners when the page loads
    document.addEventListener('DOMContentLoaded', function() {
        // Add change event to all checkboxes
        const checkboxes = document.querySelectorAll('#playlistModal input[type="checkbox"]');
        checkboxes.forEach(cb => {
            cb.addEventListener('change', updateSelectedCount);
        });

        // Add change event to radio buttons for styling
        const radioButtons = document.querySelectorAll('input[name="playlistOrder"]');
        radioButtons.forEach(radio => {
            radio.addEventListener('change', function() {
                // Update button styling
                radioButtons.forEach(r => {
                    r.parentElement.classList.toggle('active', r.checked);
                });
            });
        });

        updatePlaylistLinks();

        // configure request transcription links
        document.querySelectorAll('.requestTranscription').forEach(function(span) {
            span.style.cursor = 'pointer';

            span.addEventListener('click', function() {
                const videoId = this.dataset.videoid;
                const iconElement = this.querySelector('i');

                const formData = new FormData();
                formData.append('id', videoId);
                formData.append('isXhr', 'true');

                fetch('/Video/RequestTranscript', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok && response.status === 200) {
                        iconElement.classList.add('text-warning');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            });
        });
    });


</script>
