    <h3>Clips</h3>
    <div class="row">
        @foreach (var video in Model.ClipVideos)
        {
            <div class="col-md-4 mb-4">
                <div class="card video-card">
                    <a href="@Url.Action("Details", "Video", new { id = video.Id, tagId = Model.Tag.Id })" class="video-link">
                        @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                        {
                            <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                                 class="card-img-top video-thumbnail" alt="@video.Title">
                        }
                        else
                        {
                            <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Generating Thumbnail...</span>
                            </div>
                        }
                    </a>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="video-info"><b>@video.Title</b></span>
                            <span class="video-info">@video.ResolutionFormatted, @video.DurationFormatted, <i class="bi bi-eye"></i> @video.ViewCount</span>
                        </div>
                        <div class="d-flex flex-wrap mb-2">
                            @foreach (var videoTag in video.VideoTags)
                            {
                                <a href="@Url.Action("ByTag", "Video", new { tagId = videoTag.Tag.Id })"
