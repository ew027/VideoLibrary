@model VideoLibrary.Models.Tag

@{
    ViewData["Title"] = $"Videos tagged: {Model.Name}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Tags</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<h1>@Model.Name videos</h1>

<div class="btn-group">
    <a href="@Url.Action("Tag", "Playlist", new { tagId = Model.Id })" class="btn btn-success">
        <i class="bi bi-play-circle"></i> Play All (@Model.VideoTags.Count videos)
    </a>
    <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
        <span class="visually-hidden">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" href="@Url.Action("Tag", "Playlist", new { tagId = Model.Id })">
                <i class="bi bi-play-circle"></i> Play in Order
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="@Url.Action("Tag", "Playlist", new { tagId = Model.Id })?shuffle=true">
                <i class="bi bi-shuffle"></i> Play Shuffled
            </a>
        </li>
    </ul>
</div>

<div class="row">
    @foreach (var videoTag in Model.VideoTags)
    {
        var video = videoTag.Video;
        <div class="col-md-4 mb-4">
            <div class="card video-card">
                <a href="@Url.Action("Details", "Video", new { id = video.Id })" class="video-link">
                @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                {
                    <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                            class="card-img-top video-thumbnail" alt="@video.Title">
                }
                else
                {
                    <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">Generating Thumbnail...</span>
                    </div>
                }
                </a>                    
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title">@video.Title</h5>
                        <a href="@Url.Action("Edit", "Video", new { id = video.Id })" class="btn btn-outline-secondary btn-sm">Edit</a>
                    </div>
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="video-info">@video.ResolutionFormatted</span>
                        <span class="video-info">@video.DurationFormatted</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.VideoTags.Any())
{
    <div class="alert alert-warning">
        <h4>No videos found</h4>
        <p>This tag doesn't have any videos associated with it yet.</p>
    </div>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Tags</a>