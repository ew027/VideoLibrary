@using VideoLibrary.Models.ViewModels
@model TagWithContentViewModel

@{
    ViewData["Title"] = $"Videos tagged: {Model.Tag.Name}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Tags</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Tag.Name</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@Model.Tag.Name videos</h2>
    <div class="d-flex align-items-center gap-2">
        @if (Model.AllowArchiving)
        {
            <form asp-action="SetArchivedStatus" asp-controller="Video" class="d-inline">
                <input type="hidden" name="id" value="@Model.Tag.Id">
                <input type="hidden" name="isArchived" value="@(Model.Tag.IsArchived ? "False" : "True")">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-archive"></i> @(Model.Tag.IsArchived ? "Unarchive" : "Archive")
                </button>
            </form>
        }
        <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-play-circle"></i> Create Playlist
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" href="#" onclick="showPlaylistModal()">
                        <i class="bi bi-check2-square"></i> Select Videos for Playlist
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("Tag", "Playlist", new { tagId = Model.Tag.Id })">
                        <i class="bi bi-play-circle"></i> Play All in Order
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("Tag", "Playlist", new { tagId = Model.Tag.Id })?shuffle=true">
                        <i class="bi bi-shuffle"></i> Play All Shuffled
                    </a>
                </li>
            </ul>
        </div>

    </div>
</div>

@if (Model.Videos.Any())
{
    <div class="row">
        @foreach (var video in Model.Videos)
        {
            <div class="col-md-4 mb-4">
                <div class="card video-card">
                    <a href="@Url.Action("Details", "Video", new { id = video.Id, tagId = Model.Tag.Id })" class="video-link">
                        @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                        {
                            <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                            class="card-img-top video-thumbnail" alt="@video.Title">
                        }
                        else
                        {
                            <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Generating Thumbnail...</span>
                            </div>
                        }
                    </a>                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="video-info"><b>@video.Title</b></span>
                            <span class="video-info">@video.ResolutionFormatted, @video.DurationFormatted, <i class="bi bi-eye"></i> @video.ViewCount</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @foreach (var videoTag in video.VideoTags)
                                {
                                    <a href="@Url.Action("ByTag", "Video", new { tagId = videoTag.Tag.Id })"
                                    class="badge bg-primary tag-badge">@videoTag.Tag.Name</a>
                                }
                            </div>
                            <div>
                                @if (video.TranscriptionAvailable().HasValue)
                                {
                                    <i class="bi bi-file-text @(video.TranscriptionAvailable().Value ? "text-bright-green" : "text-warning")" style="font-size: 1.5rem;"></i>
                                }
                                else
                                {
                                    <span class="requestTranscription" data-videoId="@video.Id"><i class="bi bi-file-text" style="font-size: 1.5rem;"></i></span>
                                }
                                
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
        }
        </div>
}

