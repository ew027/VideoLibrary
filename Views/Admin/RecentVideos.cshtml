@model List<VideoLibrary.Models.Video>

@{
    ViewData["Title"] = "Recent Videos";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Admin</a></li>
        <li class="breadcrumb-item active">Recent Videos</li>
    </ol>
</nav>

<h1>Recent Videos</h1>
<p class="text-muted">Last 20 videos added to the library</p>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Thumbnail</th>
                    <th>Title</th>
                    <th>Duration</th>
                    <th>Resolution</th>
                    <th>File Size</th>
                    <th>Date Added</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(video.ThumbnailPath))
                            {
                                <img src="@Url.Action("SmallThumbnail", "Video", new { id = video.Id })"
                                     class="img-thumbnail" style="width: 60px; height: 40px; object-fit: cover;" alt="Thumbnail">
                            }
                            else
                            {
                                <div class="bg-light border rounded d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 40px;">
                                    <small class="text-muted">No thumb</small>
                                </div>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Video", new { id = video.Id })" class="text-decoration-none">
                                @video.Title
                            </a>
                        </td>
                        <td>@video.DurationFormatted</td>
                        <td>@video.ResolutionFormatted</td>
                        <td>@video.FileSizeFormatted</td>
                        <td>@video.DateAdded.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="@Url.Action("Details", "Video", new { id = video.Id })"
                                   class="btn btn-outline-primary btn-sm">View</a>
                                <a href="@Url.Action("Edit", "Video", new { id = video.Id })"
                                   class="btn btn-outline-secondary btn-sm">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No videos found</h4>
        <p>No videos have been added to the library yet.</p>
    </div>
}

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to Dashboard</a>