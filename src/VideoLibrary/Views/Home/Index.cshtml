@using VideoLibrary.Models.ViewModels
@* Views/Home/Index.cshtml *@
@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Main Content Column (80%) -->
        <div class="col-lg-9 col-md-8">

            <!-- Recently Added Videos Panel -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-3">
                        <i class="bi bi-clock-history me-2"></i>Recently Added
                    </h3>
                    <div><a href="/?seemore=1">See more</a></div>
                </div>
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
                    @foreach (var video in Model.RecentVideos)
                    {
                        <div class="col">
                            @await Html.PartialAsync("_VideoCard", video)
                        </div>
                    }
                </div>
                @if (!Model.RecentVideos.Any())
                {
                    <p class="text-muted">No recent videos found.</p>
                }
            </div>

            <!-- Unwatched Videos Panel -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-3">
                        <i class="bi bi-eye-slash me-2"></i>Discover Unwatched
                    </h3>
                    <h3 class="mb-3">
                        <a href="/Home/ClearCache?cacheId=unwatched"><i class="bi bi-arrow-repeat me-2"></i></a>
                    </h3>
                </div>
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
                    @foreach (var video in Model.UnwatchedVideos)
                    {
                        <div class="col">
                            @await Html.PartialAsync("_VideoCard", video)
                        </div>
                    }
                </div>
                @if (!Model.UnwatchedVideos.Any())
                {
                    <p class="text-muted">No unwatched videos found.</p>
                }
            </div>

            <!-- Random Videos Panel -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-3">
                        <i class="bi bi-shuffle me-2"></i>Random Selection
                    </h3>
                    <h3 class="mb-3">
                        <a href="/Home/ClearCache?cacheId=random"><i class="bi bi-arrow-repeat me-2"></i></a>
                    </h3>
                </div>
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
                    @foreach (var video in Model.RandomVideos)
                    {
                        <div class="col">
                            @await Html.PartialAsync("_VideoCard", video)
                        </div>
                    }
                </div>
                @if (!Model.RandomVideos.Any())
                {
                    <p class="text-muted">No videos found.</p>
                }
            </div>

        </div>

        <!-- Sidebar Column (20%) -->
        <div class="col-lg-3 col-md-4">
            <div class="sticky-top" style="top: 20px;">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-fire me-2"></i>Most Viewed
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var video in Model.MostViewedVideos)
                        {
                            <a asp-controller="Video" asp-action="Details" asp-route-id="@video.Id"
                               class="text-decoration-none d-flex justify-content-between align-items-start">
                                <div class="text-truncate me-2">
                                    @video.Title
                                </div>
                                <span class="badge bg-primary rounded-pill">@video.ViewCount</span>
                            </a>
                        }
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>