@using VideoLibrary.Models.ViewModels
@model SavedPlaylistListViewModel

@{
    ViewData["Title"] = "Saved Playlists";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Tags", "Home")">Tags</a></li>
        <li class="breadcrumb-item active">Saved Playlists</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-collection-play"></i> Saved Playlists</h1>
    <div>
        <span class="badge bg-secondary">@Model.TotalPlaylists playlist@(Model.TotalPlaylists == 1 ? "" : "s")</span>
        <span class="badge bg-info">@Model.TotalVideos total videos</span>
    </div>
</div>

@if (Model.Playlists.Any())
{
    <div class="row">
        @foreach (var playlistViewModel in Model.Playlists)
        {
            var playlist = playlistViewModel.Playlist;
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card playlist-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@playlist.Name</h5>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@playlist.Id" />
                                            <button type="submit" class="dropdown-item text-danger"
                                                    onclick="return confirm('Are you sure you want to delete this playlist?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="mb-1">
                        @if (!string.IsNullOrEmpty(playlist.Description))
                        {
                            <p class="card-text text-muted small mb-2">@playlist.Description</p>
                        }
                        @if (playlist.VideoCount() > 0)
                        {
                            <img src="@Url.Action("SmallThumbnail", "Video", new { id = playlist.FirstVideoId() })"
                                 class="card-img-top video-thumbnail" alt="Playlist thumbnail">
                        }
                        else
                        {
                            <div class="card-img-top thumbnail-placeholder d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">No thumbnail</span>
                            </div>
                        }
                                </div>
                        <div class="playlist-stats mb-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-value">@playlistViewModel.VideoCount</div>
                                    <div class="stat-label">Videos</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-value">@playlist.PlayCount</div>
                                    <div class="stat-label">Plays</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-value">
                                        @if (playlist.IsShuffled)
                                        {
                                            <i class="bi bi-shuffle text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-list-ol text-primary"></i>
                                        }
                                    </div>
                                    <div class="stat-label">@(playlist.IsShuffled ? "Shuffled" : "Ordered")</div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-wrap mb-3">
                            @foreach (var playlistTag in playlist.PlaylistTags)
                            {
                                <a href="@Url.Action("ByTag", "Video", new { tagId = playlistTag.Tag.Id })"
                                   class="badge bg-primary tag-badge">@playlistTag.Tag.Name</a>
                            }
                        </div>
                        <div class="playlist-meta mb-3 d-flex justify-content-between align-items-start">
                            <small class="text-muted">
                                Created: @playlist.DateCreated.ToString("MMM dd, yyyy")<br>
                                Last played: @playlist.DateLastPlayed.ToString("MMM dd, yyyy")
                            </small>
                            <a href="@Url.Action("Play", "Playlist", new { id = playlist.Id })" class="btn btn-primary">
                                <i class="bi bi-play-circle"></i> Play
                            </a>
                        </div>
                    </div>


                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No saved playlists</h4>
        <p>You haven't created any playlists yet. Create a playlist from any tag page or by selecting custom videos.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="bi bi-tags"></i> Browse Tags
        </a>
    </div>
}

<style>
    .playlist-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .playlist-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .stat-value {
        font-size: 1.2rem;
        font-weight: bold;
        color: #495057;
    }

    .stat-label {
        font-size: 0.8rem;
        color: #6c757d;
        text-transform: uppercase;
    }

    .playlist-stats {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 0.75rem;
        background-color: #f8f9fa;
    }
</style>